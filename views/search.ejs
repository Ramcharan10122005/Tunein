<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Songs</title>
    <link rel="stylesheet" href="/main.css">
    <link rel="stylesheet" href="/responsive.css">
    <link rel="stylesheet" href="/responsive.css">
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background: #0f0f0f;
            color: white;
            display: flex;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 250px;
            height: 100%;
            background: #181818;
            transition: transform 0.3s ease;
            padding-top: 60px;
            transform: translateX(0);
            z-index: 2;
            overflow-y: auto;
        }

        .sidebar.closed {
            transform: translateX(-250px);
        }

        .sidebar ul {
            list-style: none;
            padding: 60px 0 0 0;
            margin: 0;
        }

        .sidebar ul li {
            padding: 15px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
            color: #b3b3b3;
            text-decoration: none;
            border-radius: 8px;
            margin: 0 10px;
        }

        .sidebar ul li:hover {
            background: #282828;
            color: white;
        }

        .sidebar ul li:hover svg {
            transform: scale(1.1);
        }

        .sidebar ul li svg {
            transition: transform 0.2s ease;
        }

        .sidebar ul li.active {
            color: white;
            background: #282828;
        }

        /* Add a divider before Premium */
        .sidebar ul li:nth-child(5) {
            margin-top: 20px;
            border-top: 1px solid #333;
            padding-top: 20px;
        }

        /* Sidebar playlist items */
        .sidebar-playlists {
            margin-top: 20px;
            padding: 0 15px;
        }

        .sidebar-playlist-item {
            display: flex;
            align-items: center;
            padding: 10px 0;
            cursor: pointer;
        }

        .sidebar-playlist-item img,
        .sidebar-playlist-icon {
            width: 40px;
            height: 40px;
            margin-right: 10px;
            background: #333;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .sidebar-playlist-details {
            overflow: hidden;
        }

        .sidebar-playlist-title {
            font-size: 14px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .sidebar-playlist-subtitle {
            font-size: 12px;
            color: #b3b3b3;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        /* Header and Search Bar */
        header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px;
            background: #181818;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 3;
            height: 50px;
        }

        .menu-container {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .menu-btn {
            font-size: 24px;
            cursor: pointer;
            background: none;
            border: none;
            color: white;
            padding: 0;
            display: flex;
            align-items: center;
        }

        .tunein {
            font-size: 24px;
            font-weight: bold;
            color: white;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .tunein svg {
            width: 28px;
            height: 28px;
            stroke: #b62020;
        }

        /* Main Content */
        .main-content {
            margin-left: 250px;
            padding: 20px;
            flex-grow: 1;
            margin-top: 80px;
            margin-bottom: 80px;
            width: calc(100% - 250px);
            transition: all 0.3s ease;
        }

        body.sidebar-open .main-content {
            margin-left: 0;
            width: 100%;
        }

        .sidebar.closed + .main-content {
            margin-left: 0;
            width: 100%;
        }

        /* Search Container */
        .search-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        .search-input {
            width: 100%;
            padding: 15px;
            border: none;
            border-radius: 25px;
            background: #282828;
            color: white;
            font-size: 16px;
            margin-bottom: 20px;
        }

        .search-results {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            padding: 20px 0;
        }

        .song-card {
            background: #181818;
            border-radius: 8px;
            padding: 16px;
            transition: background 0.3s;
            cursor: pointer;
        }

        .song-card:hover {
            background: #282828;
        }

        .song-cover {
            width: 100%;
            aspect-ratio: 1;
            border-radius: 4px;
            margin-bottom: 12px;
            overflow: hidden;
        }

        .song-cover img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .song-info {
            text-align: left;
        }

        .song-title {
            font-weight: bold;
            margin-bottom: 4px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .song-artist {
            color: #b3b3b3;
            font-size: 14px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .add-button {
            background: #b62020;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 20px;
            margin-top: 12px;
            cursor: pointer;
            width: 100%;
            transition: background 0.2s;
        }

        .add-button:hover {
            background: #9e1c1c;
        }

        /* No results message */
        .no-results {
            text-align: center;
            color: #b3b3b3;
            padding: 40px;
            font-size: 16px;
        }

        /* Full-Width Music Bar */
        .music-controls {
            position: fixed;
            bottom: 0;
            width: 100%;
            background: #181818;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-sizing: border-box;
            z-index: 5;
            border-top: 1px solid #333;
        }

        .track-info {
            display: flex;
            align-items: center;
            flex: 1;
            padding-left: 20px;
            max-width: 300px;
        }

        .track-info svg {
            margin-right: 12px;
        }

        .controls {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .controls button {
            background: none;
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
        }

        .progress-bar {
            flex: 1;
            height: 5px;
            background: #333;
            border-radius: 5px;
            margin: 0 20px;
            position: relative;
        }

        .progress-bar span {
            position: absolute;
            height: 100%;
            width: 0%;
            background: #b62020;
            border-radius: 5px;
        }

        .volume-container {
            position: relative;
        }

        .volume-slider {
            position: absolute;
            left: 50%;
            bottom: 40px;
            transform: translateX(-50%);
            display: none;
            width: 5px;
            height: 80px;
            background: #ccc;
            border-radius: 5px;
            cursor: pointer;
        }

        .volume-slider input {
            transform: rotate(-90deg);
            width: 80px;
            position: absolute;
            left: -37px;
            top: 30px;
        }

        /* Search Header */
        .search-header {
            display: flex;
            align-items: flex-end;
            margin-bottom: 30px;
            padding: 20px;
            background: linear-gradient(to bottom, #4f4f7a, #181818);
            border-radius: 8px;
        }

        .search-header-image {
            width: 200px;
            height: 200px;
            background-color: #b62020;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 20px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
        }

        .search-header-info {
            display: flex;
            flex-direction: column;
        }

        .search-header-info h1 {
            font-size: 42px;
            margin: 0 0 10px 0;
        }

        .search-header-info p {
            font-size: 16px;
            margin: 10px 0;
            color: #b3b3b3;
        }

        .search-header-image svg {
            width: 60px;
            height: 60px;
        }

        /* Playlist selector */
        .playlist-selector {
            margin: 0 20px 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .playlist-selector label {
            color: #b3b3b3;
            font-size: 14px;
        }

        .playlist-dropdown {
            background: #282828;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 4px;
            font-size: 14px;
            min-width: 200px;
            cursor: pointer;
        }

        .playlist-dropdown:focus {
            outline: none;
            box-shadow: 0 0 0 2px #b62020;
        }

        .playlist-dropdown option {
            background: #282828;
            color: white;
        }

        /* Current playlist info */
        .current-playlist-info {
            margin: 0 20px 20px;
            padding: 15px;
            background: #282828;
            border-radius: 8px;
            color: #b3b3b3;
            font-size: 14px;
        }

        .current-playlist-info strong {
            color: white;
            font-weight: bold;
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .sidebar {
                width: 220px;
            }
            
            .main-content {
                margin-left: 220px;
                width: calc(100% - 220px);
            }
            
            .search-container {
                max-width: 90%;
            }
            
            .search-results {
                grid-template-columns: repeat(3, 1fr);
                gap: 15px;
            }
            
            .song-card {
                padding: 12px;
            }
            
            .song-card img {
                width: 80px;
                height: 80px;
            }
            
            .song-title {
                font-size: 14px;
            }
            
            .song-artist {
                font-size: 12px;
            }
            
            .song-actions {
                gap: 8px;
            }
            
            .song-actions button {
                width: 30px;
                height: 30px;
            }
        }
        
        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
                transform: translateX(-200px);
            }
            
            .sidebar.open {
                transform: translateX(0);
            }
            
            .main-content {
                margin-left: 0;
                width: 100%;
            }
            
            .search-container {
                max-width: 95%;
                padding: 15px;
            }
            
            .search-results {
                grid-template-columns: repeat(2, 1fr);
                gap: 12px;
            }
            
            .song-card {
                padding: 10px;
            }
            
            .song-card img {
                width: 70px;
                height: 70px;
            }
            
            .song-title {
                font-size: 13px;
            }
            
            .song-artist {
                font-size: 11px;
            }
            
            .song-actions {
                gap: 6px;
            }
            
            .song-actions button {
                width: 28px;
                height: 28px;
            }
        }
        
        @media (max-width: 480px) {
            .sidebar {
                width: 100%;
                transform: translateX(-100%);
            }
            
            .main-content {
                padding: 15px;
            }
            
            .search-container {
                padding: 10px;
            }
            
            .search-results {
                grid-template-columns: 1fr;
                gap: 10px;
            }
            
            .song-card {
                padding: 8px;
            }
            
            .song-card img {
                width: 60px;
                height: 60px;
            }
            
            .song-title {
                font-size: 12px;
            }
            
            .song-artist {
                font-size: 10px;
            }
            
            .song-actions {
                gap: 5px;
            }
            
            .song-actions button {
                width: 25px;
                height: 25px;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="menu-container">
            <button class="menu-btn" id="menu-btn"><i data-lucide="list"></i></button>
            <div class="tunein">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-music-4"><path d="M9 18V5l12-2v13"/><circle cx="6" cy="18" r="3"/><circle cx="18" cy="16" r="3"/></svg>
                Tune In
            </div>
        </div>
    </header>

    <div class="sidebar">
        <ul>
            <li onclick="window.location.href='/'">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                    stroke="#b62020" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-house">
                    <path d="M15 21v-8a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v8" />
                    <path
                        d="M3 10a2 2 0 0 1 .709-1.528l7-5.999a2 2 0 0 1 2.582 0l7 5.999A2 2 0 0 1 21 10v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
                </svg> Home
            </li>
            <li onclick="window.location.href='/liked-songs'">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                    stroke="#b62020" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-heart">
                    <path
                        d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z" />
                </svg> Liked Songs
            </li>
            <li onclick="window.location.href='/playlists'">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                    stroke="#b62020" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-list-music">
                    <path d="M21 15V6" />
                    <path d="M18.5 18a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
                    <path d="M12 12H3" />
                    <path d="M16 6H3" />
                    <path d="M12 18H3" />
                </svg> Playlists
            </li>
            <li onclick="window.location.href='/Mood-based'">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                    stroke="#b62020" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-smile-plus">
                    <path d="M22 11v1a10 10 0 1 1-9-10" />
                    <path d="M8 14s1.5 2 4 2 4-2 4-2" />
                    <line x1="9" x2="9.01" y1="9" y2="9" />
                    <line x1="15" x2="15.01" y1="9" y2="9" />
                    <path d="M16 5h6" />
                    <path d="M19 2v6" />
                </svg> Mood-based
            </li>
            <li onclick="window.location.href='/premium'">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                    stroke="#b62020" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-crown">
                    <path d="m2 4 3 12h14l3-12-6 7-4-7-4 7-6-7zm3 16h14"/>
                </svg> Premium
            </li>
            <li onclick="window.location.href='/profile'">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                    stroke="#b62020" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-user-cog">
                    <circle cx="12" cy="12" r="3"/>
                    <path d="M12 1v2"/>
                    <path d="M12 21v-2"/>
                    <path d="M4.22 4.22l1.42 1.42"/>
                    <path d="M18.36 18.36l1.42 1.42"/>
                    <path d="M1 12h2"/>
                    <path d="M21 12h2"/>
                    <path d="M4.22 19.78l1.42-1.42"/>
                    <path d="M18.36 5.64l1.42-1.42"/>
                </svg> Profile
            </li>
        </ul>

        <!-- Your playlists section -->
        <div class="sidebar-playlists">
            <% if (typeof userPlaylists !== 'undefined' && userPlaylists.length > 0) { %>
                <% userPlaylists.forEach(playlist => { %>
                    <div class="sidebar-playlist-item">
                        <div class="sidebar-playlist-icon">
                            <i data-lucide="music"></i>
                        </div>
                        <div class="sidebar-playlist-details">
                            <div class="sidebar-playlist-title">
                                <%= playlist.name %>
                            </div>
                            <div class="sidebar-playlist-subtitle">Playlist • <%= playlist.songs.length %> songs</div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>

    <div class="main-content">
        <div class="search-header">
            <div class="search-header-image">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-search">
                    <circle cx="11" cy="11" r="8" />
                    <path d="m21 21-4.3-4.3" />
                </svg>
            </div>
            <div class="search-header-info">
                <h1>Search</h1>
                <% if (typeof playlistName !== 'undefined' && playlistName) { %>
                    <p>Find and add songs to "<%= playlistName %>"</p>
                <% } else { %>
                    <p>Find and add songs to your playlists</p>
                <% } %>
            </div>
        </div>

        <% if (typeof playlistId !== 'undefined' && playlistId) { %>
            <div class="current-playlist-info">
                <p>Adding songs to: <strong><%= playlistName %></strong></p>
            </div>
        <% } %>

        <div class="search-container">
            <input type="text" id="search-input" class="search-input" placeholder="Search for songs...">
            <div id="search-results" class="search-results">
                <!-- Search results will be dynamically added here -->
            </div>
        </div>
    </div>

    <div class="music-controls">
        <div class="track-info">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                stroke="#eeecec" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                class="lucide lucide-music">
                <path d="M9 18V5l12-2v13" />
                <circle cx="6" cy="18" r="3" />
                <circle cx="18" cy="16" r="3" />
            </svg>
            <div>
                <div id="track-name">Song Name</div>
                <div style="font-size: 12px; color: #b3b3b3;">Artist Name</div>
            </div>
        </div>

        <div class="controls">
            <button id="prev"><i data-lucide="skip-back"></i></button>
            <button id="play-pause"><i data-lucide="play"></i></button>
            <button id="next"><i data-lucide="skip-forward"></i></button>
        </div>
        <div class="progress-bar"><span id="progress"></span></div>
        <div class="controls">
            <button><i data-lucide="repeat"></i></button>
            <button><i data-lucide="heart"></i></button>
            <div class="volume-container">
                <button id="volume-btn"><i data-lucide="volume-2"></i></button>
                <div class="volume-slider" id="volume-slider"><input type="range" min="0" max="100" value="50"></div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const menuBtn = document.getElementById("menu-btn");
            const sidebar = document.querySelector(".sidebar");
            const body = document.body;
            const searchInput = document.getElementById('search-input');
            const searchResults = document.getElementById('search-results');

            // Toggle sidebar
            menuBtn.addEventListener("click", function () {
                sidebar.classList.toggle("closed");
                body.classList.toggle("sidebar-open");
            });

            // Volume slider toggle
            document.getElementById('volume-btn').addEventListener('click', () => {
                const slider = document.getElementById('volume-slider');
                slider.style.display = slider.style.display === 'block' ? 'none' : 'block';
            });

            // Search functionality
            let debounceTimer;
            searchInput.addEventListener('input', function() {
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(() => {
                    const query = this.value.trim();
                    if (query.length > 0) {
                        fetch(`/search?query=${encodeURIComponent(query)}`)
                            .then(response => response.json())
                            .then(songs => {
                                searchResults.innerHTML = '';
                                if (songs.length === 0) {
                                    searchResults.innerHTML = '<div class="no-results">No songs found</div>';
                                    return;
                                }
                                songs.forEach(song => {
                                    const songCard = document.createElement('div');
                                    songCard.className = 'song-card';
                                    songCard.innerHTML = `
                                        <div class="song-cover">
                                            <img src="${song.image}" alt="${song.title}">
                                        </div>
                                        <div class="song-info">
                                            <div class="song-title">${song.title}</div>
                                            <div class="song-artist">${song.artist}</div>
                                            <button class="add-button" onclick="addToPlaylist('${song.title}')">
                                                Add to Playlist
                                            </button>
                                        </div>
                                    `;
                                    searchResults.appendChild(songCard);
                                });
                            })
                            .catch(error => {
                                console.error('Error searching songs:', error);
                                searchResults.innerHTML = '<div class="no-results">Error searching songs</div>';
                            });
                    } else {
                        searchResults.innerHTML = '';
                    }
                }, 300);
            });
        });

        function addToPlaylist(title) {
            const playlistId = new URLSearchParams(window.location.search).get('playlistId');
            const playlistName = new URLSearchParams(window.location.search).get('playlistName');
            
            if (!playlistId || !playlistName) {
                alert('Playlist information is missing');
                return;
            }

            window.location.href = `/add-to-playlist/${encodeURIComponent(title)}`;
        }

        lucide.createIcons();
    </script>
</body>
</html> 