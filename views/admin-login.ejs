<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login - TuneIn</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/main.css">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: transparent;
            font-family: Arial, sans-serif;
            overflow: hidden;
        }

        .logo-text {
            font-family: 'Pacifico', cursive;
            font-size: 36px;
            font-weight: normal;
            text-align: center;
            color: white;
            margin: 10px 0;
        }

        .error-message {
            background-color: rgba(255, 235, 238, 0.9);
            color: #d32f2f;
            border: 1px solid #d32f2f;
            border-radius: 4px;
            padding: 10px;
            margin-bottom: 15px;
            display: none;
        }

        .error-message.show {
            display: block;
        }

        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 40px;
            border-radius: 10px;
            background: rgba(24, 24, 24, 0.8);
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            position: relative;
            z-index: 1;
        }

        .login-container img {
            display: block;
            margin: 0 auto;
            max-width: 150px;
            height: auto;
        }

        .input-container {
            position: relative;
            margin-bottom: 20px;
        }

        input {
            width: 100%;
            padding: 10px;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 5px;
            color: white;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        input:focus {
            outline: none;
            border-color: #b62020;
            box-shadow: 0 0 10px rgba(182, 32, 32, 0.4);
        }

        label {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.6);
            transition: all 0.3s ease;
            pointer-events: none;
        }

        input:focus + label,
        input:not(:placeholder-shown) + label {
            top: -10px;
            left: 5px;
            font-size: 12px;
            color: #ff3333;
            background: rgba(24, 24, 24, 0.8);
            padding: 0 5px;
        }

        button {
            width: 100%;
            padding: 12px;
            background: linear-gradient(45deg, #ff3333, #b62020);
            border: none;
            border-radius: 5px;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 20px;
        }

        button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(182, 32, 32, 0.4);
        }

        .toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: rgba(255, 255, 255, 0.6);
            user-select: none;
        }

        p {
            text-align: center;
            color: rgba(255, 255, 255, 0.6);
            margin: 10px 0;
        }

        a {
            color: #ff3333;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        a:hover {
            color: #b62020;
            text-decoration: underline;
        }

        h2 {
            color: white;
            text-align: center;
            margin: 20px 0;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .login-container {
                max-width: 350px;
                padding: 30px;
            }
            
            .logo-text {
                font-size: 32px;
            }
            
            input {
                font-size: 14px;
                padding: 8px;
            }
            
            label {
                font-size: 14px;
            }
            
            button {
                font-size: 14px;
                padding: 10px;
            }
        }
        
        @media (max-width: 480px) {
            .login-container {
                max-width: 300px;
                padding: 25px;
            }
            
            .logo-text {
                font-size: 28px;
            }
            
            input {
                font-size: 13px;
                padding: 7px;
            }
            
            label {
                font-size: 13px;
            }
            
            button {
                font-size: 13px;
                padding: 9px;
            }
            
            .error-message {
                font-size: 12px;
                padding: 8px;
            }
        }
    </style>
</head>
<body>
    <!-- 3D Sound Wave Animation Background -->
    <div class="login-background">
        <div class="particles">
            <!-- Particles will be generated by JavaScript -->
        </div>
        <div class="sound-waves">
            <!-- Sound wave bars will be generated by JavaScript -->
        </div>
        <div class="ring"></div>
        <div class="ring" style="animation-delay: 1s;"></div>
        <div class="ring" style="animation-delay: 2s;"></div>
    </div>

    <div class="login-container">
        <div class="error-message <%= error ? 'show' : '' %>">
            <%= errorMessage %>
        </div>
        <img src="/images/Copy_of_Copy_of_TuneIn-removebg-preview.png" alt="TuneIn Logo" class="animate-fade-in">
        <h2 class="logo-text animate-text-gradient">TuneIn Admin</h2>
        <h2 class="animate-fade-in">Admin Login</h2>
        <form action="/admin/login" method="POST">
            <div class="input-container animate-slide-bottom" style="animation-delay: 0.1s;">
                <input type="text" id="username" name="username" placeholder=" " required>
                <label for="username">Username</label>
            </div>

            <div class="input-container animate-slide-bottom" style="animation-delay: 0.2s;">
                <input type="password" id="password" name="password" placeholder=" " required>
                <label for="password">Password</label>
                <span class="toggle-password" onclick="togglePassword('password')">üëÅ</span>
            </div>

            <button type="submit" class="animate-slide-bottom hover-lift" style="animation-delay: 0.3s;">Login</button>
        </form>
        <p class="animate-fade-in" style="animation-delay: 0.4s;"><a href="/">Back to Home</a></p>
    </div>

    <script>
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            input.type = input.type === 'password' ? 'text' : 'password';
        }

        // Generate particles
        document.addEventListener('DOMContentLoaded', function() {
            const particlesContainer = document.querySelector('.particles');
            const soundWavesContainer = document.querySelector('.sound-waves');
            
            // Generate particles
            for (let i = 0; i < 30; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                // Random position
                const startX = Math.random() * 100;
                const startY = Math.random() * 100;
                const tx = (Math.random() - 0.5) * 200;
                const ty = (Math.random() - 0.5) * 200;
                const tz = Math.random() * 100;
                
                particle.style.setProperty('--startX', `${startX}%`);
                particle.style.setProperty('--startY', `${startY}%`);
                particle.style.setProperty('--tx', `${tx}px`);
                particle.style.setProperty('--ty', `${ty}px`);
                particle.style.setProperty('--tz', `${tz}px`);
                particle.style.animationDelay = `${Math.random() * 5}s`;
                
                particlesContainer.appendChild(particle);
            }
            
            // Generate sound wave bars
            for (let i = 0; i < 20; i++) {
                const waveBar = document.createElement('div');
                waveBar.className = 'wave-bar';
                waveBar.style.animationDelay = `${i * 0.1}s`;
                soundWavesContainer.appendChild(waveBar);
            }
            
            // Generate musical notes
            const notes = ['‚ô™', '‚ô´', '‚ô¨', '‚ô©'];
            for (let i = 0; i < 15; i++) {
                const note = document.createElement('div');
                note.className = 'musical-note';
                note.textContent = notes[Math.floor(Math.random() * notes.length)];
                
                const startX = Math.random() * 100;
                const startY = Math.random() * 100;
                const endX = (Math.random() - 0.5) * 200;
                const endY = (Math.random() - 0.5) * 200;
                
                note.style.setProperty('--startX', `${startX}%`);
                note.style.setProperty('--startY', `${startY}%`);
                note.style.setProperty('--endX', `${endX}px`);
                note.style.setProperty('--endY', `${endY}px`);
                note.style.animationDelay = `${Math.random() * 5}s`;
                
                document.querySelector('.login-background').appendChild(note);
            }
        });
    </script>
</body>
</html> 